<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Oceania">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aves de Oceania"
        android:textColor="#A35D75"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4789D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="183dp"
                    android:layout_height="250dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio1"
                    android:scaleType="centerInside"
                    android:src="@drawable/kiwi"
                    android:tooltipText="America"
                    tools:src="@drawable/kiwi" />

                <LinearLayout
                    android:layout_width="183dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kiwi"
                        android:textColor="#030610"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView"
                        android:layout_width="201dp"
                        android:layout_height="118dp"
                        android:text="Ave nocturna, sin alas, con pico largo y plumaje marrón."
                        android:textColor="#060917"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="531dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="216dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kakapo"
                        android:textColor="#030612"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView2"
                        android:layout_width="196dp"
                        android:layout_height="133dp"
                        android:text="Loro nocturno y no volador, endémico de Nueva Zelanda, en peligro crítico de extinción."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="146dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio2"
                    android:scaleType="centerInside"
                    android:src="@drawable/kakapo"
                    android:tooltipText="Europa"
                    tools:src="@drawable/kakapo" />

            </TableRow>

            <TableRow
                android:layout_width="546dp"
                android:layout_height="180dp">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio3"
                    android:scaleType="centerInside"
                    android:src="@drawable/casuario"
                    android:tooltipText="Africa"
                    tools:src="@drawable/casuario" />

                <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="234dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casuario"
                        android:textColor="#010512"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView3"
                        android:layout_width="181dp"
                        android:layout_height="176dp"
                        android:text="Ave grande y corpulenta, con plumaje oscuro y una cresta en la cabeza, conocida por su agresividad y fuerza."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="234dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/pajaros"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/menu1" />
</androidx.constraintlayout.widget.ConstraintLayout>