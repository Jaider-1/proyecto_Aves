<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="6dp"
        android:text="Aves del Mundo"
        android:textColor="#A35D75"
        android:textSize="45dp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4588BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="198dp"
                    android:layout_height="196dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="onclik"
                    android:scaleType="centerInside"
                    android:src="@drawable/quetzal"
                    android:tooltipText="America"
                    tools:src="@drawable/quetzal" />

                <LinearLayout
                    android:layout_width="183dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="América"
                        android:textColor="#030610"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView"
                        android:layout_width="194dp"
                        android:layout_height="91dp"
                        android:text="Colibríes, conocidos por su vuelo rápido y plumajes brillantes."
                        android:textColor="#060917"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="198dp"
                    android:layout_height="196dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="onclik"
                    android:scaleType="centerInside"
                    android:src="@drawable/alcaudonreal"
                    android:tooltipText="Europa"
                    tools:src="@drawable/alcaudonreal" />

                <LinearLayout
                    android:layout_width="338dp"
                    android:layout_height="157dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Europa"
                        android:textColor="#030612"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView2"
                        android:layout_width="208dp"
                        android:layout_height="87dp"
                        android:text="Marcada migración estacional, desde grullas a petirrojos"
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="198dp"
                    android:layout_height="196dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="onclik"
                    android:scaleType="centerInside"
                    android:src="@drawable/paraisowilson"
                    android:tooltipText="Africa"
                    tools:src="@drawable/paraisowilson" />

                <LinearLayout
                    android:layout_width="183dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Africa"
                        android:textColor="#010512"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView3"
                        android:layout_width="184dp"
                        android:layout_height="107dp"
                        android:text="Hogar de aves icónicas como avestruces y águilas pescadoras."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="198dp"
                    android:layout_height="196dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="onclik"
                    android:scaleType="centerInside"
                    android:src="@drawable/faisandorado"
                    android:tooltipText="Asia"
                    tools:src="@drawable/faisandorado" />


                <LinearLayout
                    android:layout_width="353dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asia"
                        android:textColor="#010512"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView4"
                        android:layout_width="232dp"
                        android:layout_height="137dp"
                        android:text="Desde águilas majestuosas hasta faisanes dorados, adaptadas a diversos hábitats."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="198dp"
                    android:layout_height="196dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="onclik"
                    android:scaleType="centerInside"
                    android:src="@drawable/kiwi"
                    android:tooltipText="Oceania"
                    tools:src="@drawable/kiwi" />

                <LinearLayout
                    android:layout_width="183dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oceanía"
                        android:textColor="#010512"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView5"
                        android:layout_width="192dp"
                        android:layout_height="107dp"
                        android:text="Kiwis y kakapos, aves únicas y endémicas de las islas del Pacífico."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>