<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".America">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Aves de America"
        android:textColor="#E91E63"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4588BD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="153dp"
                    android:layout_height="192dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio1"
                    android:scaleType="centerInside"
                    android:src="@drawable/quetzal"
                    android:tooltipText="America"
                    tools:src="@drawable/quetzal" />

                <LinearLayout
                    android:layout_width="197dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quetzal"
                        android:textColor="#030610"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView"
                        android:layout_width="189dp"
                        android:layout_height="101dp"
                        android:text="Plumaje brillante y sagrado para las culturas mesoamericanas."
                        android:textColor="#060917"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="531dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="183dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallito de Roca:"
                        android:textColor="#030612"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumaje colorido, exhibiciones de cortejo."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="202dp"
                    android:layout_height="170dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio2"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallitorocas"
                    android:tooltipText="Europa"
                    tools:src="@drawable/gallitorocas" />

            </TableRow>

            <TableRow
                android:layout_width="477dp"
                android:layout_height="307dp">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="204dp"
                    android:layout_height="195dp"
                    android:contentDescription="@string/pajaros"
                    android:onClick="playAudio3"
                    android:scaleType="centerInside"
                    android:src="@drawable/condorandino"
                    android:tooltipText="Africa"
                    tools:src="@drawable/condorandino" />

                <LinearLayout
                    android:layout_width="236dp"
                    android:layout_height="231dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titleTextView3"
                        android:layout_width="140dp"
                        android:layout_height="81dp"
                        android:text="Cóndor Andino"
                        android:textColor="#010512"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <!-- Párrafo -->
                    <TextView
                        android:id="@+id/paragraphTextView3"
                        android:layout_width="216dp"
                        android:layout_height="120dp"
                        android:text="Ave grande, envergadura impresionante, importante en los Andes."
                        android:textColor="#010512"
                        android:textSize="20dp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:contentDescription="@string/pajaros"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menu1" />
</androidx.constraintlayout.widget.ConstraintLayout>